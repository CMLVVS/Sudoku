<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!--
    FXML file defining the Sudoku game interface.
    Designed for a 6x6 Sudoku game with help and control features.

    @author Camilo Vivas Correa
    @studentID 202439049
    @institution Universidad del Valle
    @version 1.0
    @since 2025
-->
<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.CVC.sudoku.Controller"
            prefHeight="700.0" prefWidth="600.0"
            style="-fx-background-color: #ecf0f1;">

    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">

        <Label text="Sudoku 6x6 - Universidad del Valle"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <GridPane fx:id="sudokuGrid" hgap="2.0" vgap="2.0"
                  style="-fx-background-color: white; -fx-border-color: #34495e; -fx-border-width: 2px; -fx-padding: 5px;">
            <!-- The 6x6 board will be generated dynamically -->
        </GridPane>

        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Help" onAction="#handleHelp"
                    style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="New Game" onAction="#handleNewGame"
                    style="-fx-font-size: 14px; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            <Button text="Verify" onAction="#handleVerify"
                    style="-fx-font-size: 14px; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button text="Reset" onAction="#handleReset"
                    style="-fx-font-size: 14px; -fx-background-color: #f39c12; -fx-text-fill: white;"/>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: red;"/>
    </VBox>
</AnchorPane>