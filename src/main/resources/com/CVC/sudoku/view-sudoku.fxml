<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.CVC.sudoku.Controller"
            prefHeight="700.0" prefWidth="600.0"
            style="-fx-background-color: #ecf0f1;">

    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">

        <Label text="Sudoku 6x6"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0.5, 1, 1);"/>

        <GridPane fx:id="sudokuGrid" hgap="1.0" vgap="1.0"
                  style="-fx-background-color: white; -fx-border-color: #34495e; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-padding: 5px;">
            <!-- El tablero 6x6 se generará dinámicamente -->
        </GridPane>

        <HBox spacing="15.0" alignment="CENTER">
            <Button text="Help" onAction="#handleHelp"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px 15px;"/>
            <Button text="New Game" onAction="#handleNewGame"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px 15px;"/>
            <Button text="Verify" onAction="#handleVerify"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px 15px;"/>
            <Button text="Reset" onAction="#handleReset"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px 15px;"/>
        </HBox>

        <Label fx:id="messageLabel"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #c0392b; -fx-background-color: #f9ebea; -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-alignment: center; -fx-min-width: 400px;"/>
    </VBox>
</AnchorPane>